@model CEC_SwiftHR.ViewModel.EmployeeViewModel

@{
                /**/

                ViewBag.Title = "_EducationPartialView";
                Layout = null;
}


<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-comments"></i>學歷
        </div>
        <div class="tools">
            <a id="BtnAddDegree" title="" class="add-on" href="javascript:;" data-original-title=""><i class="fa fa-plus"></i> </a>
            <a title="" class="collapse" href="javascript:;" data-original-title=""> </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-scrollable">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(x => x.Educations.First().SchoolName) </th>
                        <th> @Html.DisplayNameFor(x => x.Educations.First().Department)</th>
                        <th> @Html.DisplayNameFor(x => x.Educations.First().Drgree) </th>
                        <th> @Html.DisplayNameFor(x => x.Educations.First().StartDate) </th>
                        <th> @Html.DisplayNameFor(x => x.Educations.First().EndDate) </th>
                    </tr>
                </thead>
                <tbody id="DegreeTBody">
                </tbody>
            </table>
        </div>
    </div>
</div>








